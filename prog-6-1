#include<stdio.h>

float max(float a,float b);//define a funtion to return the max of two float.

int main(void)
{
	float temp,i;
	for(i = 1,temp = 1;;)
	{
		
	printf("Enter a number:");
	scanf("%f",&temp);
	if(temp <= 0) 
    {printf("%.2f",i);break;}
    
    //if the number given <0, output the maximum and quit.
	
    i = max(temp,i);
	
	}
	return 0;
} 

float max(float a,float b)
{
	return (a > b?a:b);
}
